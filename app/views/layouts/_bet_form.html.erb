<div class="container m-5">
  <div class="row mt-5">
    <div class="col-md-5">
      <div class="row">
        <div class="col-md-6 text-right my-auto">
          <h3><%= game.home_team.name %></h3>
        </div>
        <div class="col-md-4">
          <%= image_tag(game.home_team.logo) %>
        </div>
        <div class="col-md-2 my-auto text-center">
          <% if !game.played_at.blank? && game.played_at < Time.zone.now %>
            <h2><%= game.home_score %></h2>
          <% end -%>
        </div>
      </div>
      <% if current_user && game.closes_at > Time.zone.now %>
      <div class="row">
        <div class="mx-auto">
          <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary" disabled>Bet: </button>
            <%= button_to "1 GGT", bets_path, class: "btn btn-secondary btn-lg no-radius", method: 'post', params: { game_id: game.id, team_id: game.home_team_id, amount: 1} %>
            <%= button_to "5 GGT", bets_path, class: "btn btn-secondary btn-lg no-radius", method: 'post', params: { game_id: game.id, team_id: game.home_team_id, amount: 5} %>
            <%= button_to "20 GGT", bets_path, class: "btn btn-secondary btn-lg no-left-radius", method: 'post', params: { game_id: game.id, team_id: game.home_team_id, amount: 20} %>
          </div>
        </div>
      </div>
      <% end -%>
    </div>

    <div class="col-md-2 text-center my-auto">
      <h3>VS</h3>
    </div>

    <div class="col-md-5">
      <div class="row">
        <div class="col-md-2 my-auto text-center">
          <% if !game.played_at.blank? && game.played_at < Time.zone.now %>
            <h2><%= game.away_score %></h2>
          <% end -%>
        </div>
        <div class="col-md-4">
          <%= image_tag(game.away_team.logo) %>
        </div>
        <div class="col-md-6 text-left my-auto">
          <h3><%= game.away_team.name %></h3>
        </div>
      </div>
      <% if current_user && game.closes_at > Time.zone.now %>
      <div class="row">
        <div class="mx-auto">
          <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary" disabled>Bet: </button>
            <%= button_to "1 GGT", bets_path, class: "btn btn-secondary btn-lg no-radius", method: 'post', params: { game_id: game.id, team_id: game.away_team_id, amount: 1} %>
            <%= button_to "5 GGT", bets_path, class: "btn btn-secondary btn-lg no-radius", method: 'post', params: { game_id: game.id, team_id: game.away_team_id, amount: 5} %>
            <%= button_to "20 GGT", bets_path, class: "btn btn-secondary btn-lg no-left-radius", method: 'post', params: { game_id: game.id, team_id: game.away_team_id,amount: 20} %>
          </div>
        </div>
      </div>
      <% end -%>
    </div>
  </div>
  <% if link == true %>
    <div class="row justify-content-end">
      <div class="col-md-2 align-self-end">
        <%= link_to "Check details >", game_path(game) %>
      </div>
    </div>
  <% end -%>
</div>
